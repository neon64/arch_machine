#!/bin/bash

options="Reboot normally
Reboot to Arch Linux
Reboot to Windows"
selection=$(echo "$options" | fzf --reverse --height=5 --color=16 )
case "$selection" in
    'Reboot normally')
        /bin/reboot
        ;;
    'Reboot to Arch Linux')
        reboot_to_arch
        ;;
    'Reboot to Windows')
        reboot_to_windows
        ;;
    *)
        echo "invalid option selected"
        exit 1
esac
